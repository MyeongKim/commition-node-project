    <!-- alarm div -->
    <div class="bell-alarm-div visuallyhidden bell-alarm-div-hidden">
      <ul>
        <li>
          <a href="#">하트한 커미션에 새로운 신청이 들어왔습니다.</a>
        </li>
        <li>
          <a href="#">범준</a>님이 나를 팔로우합니다.
        </li>
        <li>
          <a href="#">[공지사항]</a> 새로운 기능이 추가되었습니다.
        </li>
        <li>
          <a href="#">범준</a>님이 내 커미션을 구매하셨습니다.
        </li>
        <li>
          <a href="#">범준</a>님이 새로운 메시지를 보내셨습니다.
        </li>
      </ul>
    </div>

    <div class="container">
      <div class="wrapper">
        {{{messages}}}
        {{#if errors}}
          {{#each errors}}
            <div class="notice error"><i class="icon-remove-sign icon-large"></i> {{msg}}
            <a href="#close" class="icon-remove"></a></div>
          {{/each}}
        {{/if}}
        {{{body}}}
      </div>
      

    </div><!-- /.container -->

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <!-- jscroll code -->
    <script type="text/javascript">
      $(document).ready(function(){
        var data = JSON.stringify({{data}});
        var userId = JSON.stringify({{userId}});
        var mine = JSON.stringify({{mine}});
        // socket.io connection
        var socket = io.connect('http://127.0.0.1:8080');

        // index.handlebars js
        $('.scroll').jscroll();

        $('.alarm').click(function(e){
          e.preventDefault();
          var $alarmDiv = $('.bell-alarm-div');
          if ($alarmDiv.hasClass('bell-alarm-div-hidden')) {
            $alarmDiv.removeClass('bell-alarm-div-hidden');
            setTimeout(function () {
              $alarmDiv.removeClass('visuallyhidden');
            }, 20);
          } else {
            setTimeout(function () {
              $alarmDiv.addClass('visuallyhidden');
            }, 20);
            // $alarmDiv.addClass('visuallyhidden');
            $alarmDiv.one('transitionend', function(e) {
              $alarmDiv.addClass('bell-alarm-div-hidden');
            });
          }
        });

        // submit.handlebars js
        var unsaved = false;

        $(":input").change(function(){
          unsaved = true;
        });
        $(window).bind('beforeunload', function(){

          if(unsaved){
            return '페이지에서 나가시겠습니까?';
          }
        });

        $('form').submit(function(){
          $(window).unbind('beforeunload'); 
        });

        $(".slider-target").skippr({
          navType: 'bubble'
        });

        // alert({{userId}});
        // http://stackoverflow.com/questions/29174185/accessing-handlebars-variable-inside-client-js-file
        // socket.io of mypage js
        $('#mypage_profile_button').click(function(e){
          var mine = $(this).attr('mine');
          // check if this profile is mine
          if(mine === true){
            // this profile is mine
            alert("프로필 수정은 차후에");
          } else {
            // this profile is not mine
            if(data.following.indexOf(userId) < 0){
              // I'm not following this user
              socket.emit("followPlus", { creatorId: data._id, userId: userId });
            }else {
              // I'm already following this user
              socket.emit("followMinus", { creatorId: this.state.data._creator._id, userId: userId });
            }
          }
        });

        // detail commition page js


      });
    </script>
